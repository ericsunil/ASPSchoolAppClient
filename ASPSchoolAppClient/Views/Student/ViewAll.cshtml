@model IEnumerable<ASPSchoolAppClient.Models.Student>

@{
    ViewBag.Title = "ViewAll";
    Layout = null;
}

<table class="table table-striped table-bordered table-condensed table-hover" id="dataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchoolToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradeToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageToken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchoolToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GradeToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ParentToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageToken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    <a class="btn btn-success" onclick="Edit('@Url.Action("AddorEdit", "Student", new { id=@item.StudentID })')"> <i class="fa fa-edit"></i> Edit</a>
                    <a class="btn btn-danger" onclick="Delete('@Url.Action("Delete", "Student", new { id=@item.StudentID })')"><i class="fa fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>
